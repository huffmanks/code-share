---
import { Code } from "@astrojs/starlight/components";

const gitconfigResponse = await fetch("https://raw.githubusercontent.com/huffmanks/config-stash/refs/heads/main/.dotfiles/.gitconfig");
const gitconfig = await gitconfigResponse.text();

const gitignoreResponse = await fetch("https://raw.githubusercontent.com/huffmanks/config-stash/refs/heads/main/.dotfiles/.gitignore");
const gitignore = await gitignoreResponse.text();

const zprofileResponse = await fetch("https://raw.githubusercontent.com/huffmanks/config-stash/refs/heads/main/.dotfiles/.zprofile");
const zprofile = await zprofileResponse.text();

const zshrcResponse = await fetch("https://raw.githubusercontent.com/huffmanks/config-stash/refs/heads/main/.dotfiles/.zshrc");
const zshrc = await zshrcResponse.text();
---

<Code lang="sh" title="~/.gitconfig" code={gitconfig} />
<Code lang="sh" title="~/.gitignore" code={gitignore} />
<Code lang="sh" title="~/.zprofile" code={zprofile} />
<Code lang="sh" title="~/.zshrc" code={zshrc} />

---
import { Code } from "@astrojs/starlight/components";

const flakeNixResponse = await fetch("https://raw.githubusercontent.com/huffmanks/config-stash/refs/heads/main/flake.nix");
const flakeNix = await flakeNixResponse.text();

const configurationNixResponse = await fetch("https://raw.githubusercontent.com/huffmanks/config-stash/refs/heads/main/configuration.nix");
const configurationNix = await configurationNixResponse.text();

const systemNixResponse = await fetch("https://raw.githubusercontent.com/huffmanks/config-stash/refs/heads/main/system.nix");
const systemNix = await systemNixResponse.text();
---

<Code lang="nix" title="flake.nix" wrap preserveIndent code={flakeNix} />
<Code lang="nix" title="configuration.nix" wrap preserveIndent code={configurationNix} />
<Code lang="nix" title="system.nix" wrap preserveIndent code={systemNix} />
